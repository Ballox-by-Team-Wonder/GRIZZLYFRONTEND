contract StakingContract is ReentrancyGuard{
    using SafeMath for uint256;
    IERC20 public token;
    mapping(address => uint256) public stakedBalances;
    mapping(address => uint256) public lastStakeTimes;
    uint256 public lockTime = 60 days;
    uint256 public apy = 30;
    
    constructor(address _token) {
        token = IERC20(_token);
    }
    
    function stake(uint256 _amount) external {
        require(token.balanceOf(msg.sender) >= _amount, "Insufficient balance");
        require(token.allowance(msg.sender, address(this)) >= _amount, "Token allowance too low");
        require(stakedBalances[msg.sender] == 0, "Tokens are already staked");
        token.transferFrom(msg.sender, address(this), _amount);
        stakedBalances[msg.sender] = _amount;
        lastStakeTimes[msg.sender] = block.timestamp;
    }
    
    function withdraw() external {
        require(stakedBalances[msg.sender] > 0, "No tokens staked");
        require(block.timestamp >= lastStakeTimes[msg.sender] + lockTime, "Tokens are still locked");
        uint256 reward = stakedBalances[msg.sender] * apy * lockTime / 365 days / 100;
        token.transfer(msg.sender, stakedBalances[msg.sender] + reward);
        stakedBalances[msg.sender] = 0;
        lastStakeTimes[msg.sender] = 0;
    }
